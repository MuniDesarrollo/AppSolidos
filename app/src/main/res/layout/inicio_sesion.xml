        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario (DNI)" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
